import re

def preprocess_text(text):
    # Remove special characters and digits using regular expressions
    processed_text = re.sub(r'[^a-zA-Z\s]', '', text)
    
    return processed_text

# Example usage
paragraph = "This is an example paragraph! It contains special characters, such as @, #, $, and digits like 123."
processed_paragraph = preprocess_text(paragraph)
print(processed_paragraph)
